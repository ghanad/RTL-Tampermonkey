{
    "manifest_version": 3,
    "name": "Claude RTL Enabler",
    "version": "1.0",
    "description": "Enables RTL and Persian fonts for Claude.ai",
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
      {
        "matches": ["*://*.claude.ai/*"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "https://fonts.googleapis.com/*",
      "https://fonts.gstatic.com/*"
    ]
  }
